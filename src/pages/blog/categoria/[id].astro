---
import Layout from '../../../layouts/Layout.astro';
import { getCategoryById, getPostsByCategory, blogCategories } from '../../../lib/blogs';

export async function getStaticPaths() {
  return blogCategories.map(category => ({
    params: { id: category.id },
    props: { category }
  }));
}

const { category } = Astro.props;
const posts = getPostsByCategory(category.id);
---

<Layout 
  title={`${category.name} - Blog - Profebenja`} 
  description={`Art√≠culos sobre ${category.name.toLowerCase()}. ${category.description}`}
>
  <div class="max-w-4xl mx-auto">
    <!-- Breadcrumb -->
    <nav class="mb-8">
      <ol class="flex items-center space-x-2 text-sm text-gray-500">
        <li><a href="/" class="hover:text-gray-700">Home</a></li>
        <li>‚Ä∫</li>
        <li><a href="/blog" class="hover:text-gray-700">Blog</a></li>
        <li>‚Ä∫</li>
        <li class="text-gray-900">{category.name}</li>
      </ol>
    </nav>

    <!-- Header de la categor√≠a -->
    <div class="text-center mb-12">
      <div class={`inline-flex items-center justify-center w-16 h-16 ${category.color} text-white text-2xl rounded-full mb-4`}>
        {category.icon}
      </div>
      <h1 class="text-4xl font-bold text-gray-900 mb-4">{category.name}</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        {category.description}
      </p>
      <p class="text-gray-500 mt-2">
        {posts.length} art√≠culo{posts.length !== 1 ? 's' : ''} en esta categor√≠a
      </p>
    </div>

    <!-- Filtros por categor√≠a -->
    <div class="mb-8">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Todas las categor√≠as</h2>
      <div class="flex flex-wrap gap-3">
        <a href="/blog" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-full text-sm font-medium hover:bg-gray-300 transition-colors">
          Todas
        </a>
        {blogCategories.map(cat => (
          <a 
            href={`/blog/categoria/${cat.id}`}
            class={`px-4 py-2 ${cat.id === category.id ? 'ring-2 ring-offset-2 ring-blue-500' : ''} ${cat.color} text-white rounded-full text-sm font-medium hover:opacity-80 transition-opacity`}
          >
            {cat.icon} {cat.name}
          </a>
        ))}
      </div>
    </div>

    <!-- Lista de posts -->
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {posts.map(post => (
        <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          {post.featuredImage && (
            <img 
              src={post.featuredImage} 
              alt={post.title}
              class="w-full h-48 object-cover"
            />
          )}
          <div class="p-6">
            <!-- Categor√≠as -->
            <div class="flex flex-wrap gap-2 mb-3">
              {post.categories.map(categoryId => {
                const cat = getCategoryById(categoryId);
                return cat ? (
                  <span class={`px-2 py-1 ${cat.color} text-white text-xs rounded-full`}>
                    {cat.icon} {cat.name}
                  </span>
                ) : null;
              })}
            </div>

            <!-- T√≠tulo -->
            <h2 class="text-xl font-bold text-gray-900 mb-2 hover:text-blue-600 transition-colors">
              <a href={`/blog/${post.id}`}>{post.title}</a>
            </h2>

            <!-- Descripci√≥n -->
            <p class="text-gray-600 mb-4 line-clamp-3">{post.excerpt}</p>

            <!-- Meta informaci√≥n -->
            <div class="flex items-center justify-between text-sm text-gray-500">
              <div class="flex items-center space-x-4">
                <span>üë§ {post.author}</span>
                <span>üìÖ {new Date(post.publishDate).toLocaleDateString('es-ES')}</span>
              </div>
              <span>‚è±Ô∏è {post.readingTime} min</span>
            </div>

            <!-- Tags -->
            {post.tags.length > 0 && (
              <div class="mt-4 flex flex-wrap gap-1">
                {post.tags.slice(0, 3).map(tag => (
                  <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded">
                    #{tag}
                  </span>
                ))}
                {post.tags.length > 3 && (
                  <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded">
                    +{post.tags.length - 3}
                  </span>
                )}
              </div>
            )}
          </div>
        </article>
      ))}
    </div>

    <!-- Mensaje si no hay posts -->
    {posts.length === 0 && (
      <div class="text-center py-12">
        <div class="text-6xl mb-4">üìù</div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">No hay art√≠culos en esta categor√≠a</h3>
        <p class="text-gray-600">Pronto tendremos contenido interesante en {category.name.toLowerCase()}.</p>
        <a href="/blog" class="inline-block mt-4 px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
          Ver todos los art√≠culos
        </a>
      </div>
    )}
  </div>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style> 
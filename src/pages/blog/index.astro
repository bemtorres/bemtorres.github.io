---
import Layout from '../../layouts/Layout.astro';
import { getPublishedPosts, blogCategories, getCategoryById } from '../../lib/blogs';

const posts = getPublishedPosts();
---

<Layout title="Blog - Profebenja" description="Art√≠culos sobre tecnolog√≠a, educaci√≥n y desarrollo web">
  <div class="max-w-4xl mx-auto">
    <!-- Header del blog -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">üìù Blog</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Art√≠culos sobre tecnolog√≠a, educaci√≥n y desarrollo web. Compartiendo conocimiento y experiencias.
      </p>
    </div>

    <!-- Filtros por categor√≠a -->
    <div class="mb-8">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Categor√≠as</h2>
      <div class="flex flex-wrap gap-3">
        <a href="/blog" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-full text-sm font-medium hover:bg-gray-300 transition-colors">
          Todas
        </a>
        {blogCategories.map(category => (
          <a 
            href={`/blog/categoria/${category.id}`}
            class={`px-4 py-2 ${category.color} text-white rounded-full text-sm font-medium hover:opacity-80 transition-opacity`}
          >
            {category.icon} {category.name}
          </a>
        ))}
      </div>
    </div>

    <!-- Lista de posts -->
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {posts.map(post => (
        <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          {post.featuredImage && (
            <img 
              src={post.featuredImage} 
              alt={post.title}
              class="w-full h-48 object-cover"
            />
          )}
          <div class="p-6">
            <!-- Categor√≠as -->
            <div class="flex flex-wrap gap-2 mb-3">
              {post.categories.map(categoryId => {
                const category = getCategoryById(categoryId);
                return category ? (
                  <span class={`px-2 py-1 ${category.color} text-white text-xs rounded-full`}>
                    {category.icon} {category.name}
                  </span>
                ) : null;
              })}
            </div>

            <!-- T√≠tulo -->
            <h2 class="text-xl font-bold text-gray-900 mb-2 hover:text-blue-600 transition-colors">
              <a href={`/blog/${post.id}`}>{post.title}</a>
            </h2>

            <!-- Descripci√≥n -->
            <p class="text-gray-600 mb-4 line-clamp-3">{post.excerpt}</p>

            <!-- Meta informaci√≥n -->
            <div class="flex items-center justify-between text-sm text-gray-500">
              <div class="flex items-center space-x-4">
                <span>üë§ {post.author}</span>
                <span>üìÖ {new Date(post.publishDate).toLocaleDateString('es-ES')}</span>
              </div>
              <span>‚è±Ô∏è {post.readingTime} min</span>
            </div>

            <!-- Tags -->
            {post.tags.length > 0 && (
              <div class="mt-4 flex flex-wrap gap-1">
                {post.tags.slice(0, 3).map(tag => (
                  <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded">
                    #{tag}
                  </span>
                ))}
                {post.tags.length > 3 && (
                  <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded">
                    +{post.tags.length - 3}
                  </span>
                )}
              </div>
            )}
          </div>
        </article>
      ))}
    </div>

    <!-- Mensaje si no hay posts -->
    {posts.length === 0 && (
      <div class="text-center py-12">
        <div class="text-6xl mb-4">üìù</div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">No hay art√≠culos publicados</h3>
        <p class="text-gray-600">Pronto tendremos contenido interesante para compartir.</p>
      </div>
    )}
  </div>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style> 